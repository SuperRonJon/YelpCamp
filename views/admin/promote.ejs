<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Admin Controls</p>
            <div class="list-group">
                <a href="/admin" class="list-group-item">Home</a>
                <a href="#" class="list-group-item">Add new admin</a>
                <a href="#" class="list-group-item active">Upgrade user to admin</a>
            </div>
        </div>
        <div class="col-md-9">
            <ul class="list-group list-group-flush">
                <% users.forEach(function(user){ %>
                    <li class="list-group-item">
                        <%=user.username%>
                        <% if(user.isAdmin){ %>
                            <button class="btn btn-xs btn-success disabled pull-right">Admin</button>
                        <% } else{ %>
                        <form class="delete-form" action="/admin/<%=user._id%>?_method=PUT" method="POST">
                            <button class="btn btn-xs btn-danger pull-right">Promote</button>
                        </form>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<% include ../partials/footer %>
        